<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button focused. -->
    <item android:drawable="@drawable/button_hover" android:state_focused="true" android:state_pressed="false" />

    <!-- Button focused pressed. -->
    <item android:drawable="@drawable/button_hover" android:state_focused="true" android:state_pressed="true" />

    <!-- Button pressed. -->
    <item android:drawable="@drawable/button_hover" android:state_focused="false" android:state_pressed="true" />

    <!-- Button default image. -->
    <item android:drawable="@drawable/button_bg" />
</selector>